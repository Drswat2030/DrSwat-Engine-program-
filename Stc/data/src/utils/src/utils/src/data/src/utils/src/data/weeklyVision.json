import weeklyVision from "../data/weeklyVision.json";

export function getWeeklyPlan() {
  const plan = {};
  for (let area in weeklyVision) {
    const tasks = weeklyVision[area];
    plan[area] = tasks.sort(() => 0.5 - Math.random()).slice(0, 2);
  }
  return plan;
}


